OPENAI_API_KEY=''
TAVILY_API_KEY=''

PORT = 8787
NODE_ENV = development

# ===================== Optional: Core =====================
# 模型可自行替換（例如 gpt-4o, gpt-4o-mini, o4-mini 等）
WRITER_MODEL=gpt-4o-mini
RESEARCH_MODEL=gpt-4o-mini
CRITIC_MODEL=gpt-4o-mini
ROUTER_MODEL=gpt-4o-mini
EMBED_MODEL=text-embedding-3-small

# 回答語言：auto | en | zh-TW | ja | ko
TARGET_LANG=auto

# 速度模式：fast | balanced | thorough
SPEED_MODE=balanced

# 每輪最大時間上限（毫秒）。留空或 0 表示不限制
MAX_TIME_MS=20000

# 新聞搜尋最近天數（Router 判定為 news 時使用）
NEWS_DAYS=7

# 記憶儲存檔案
MEMORY_PATH=./memory.jsonl


# ===================== Optional: Style & Length =====================
WRITER_TEMPERATURE=0.7
WRITER_MAX_TOKENS=1800
RESEARCH_TEMPERATURE=0.2
ANALYST_TEMPERATURE=0.2
CRITIC_TEMPERATURE=0.3


# ===================== Optional: Search Diversity =====================
# 多語查詢擴充（0=關閉, 1=開啟）
QUERY_EXPANSION=1
# 至少納入的英文來源數
MIN_EN_SOURCES=3
# 單一網域最多收錄幾筆
MAX_PER_DOMAIN=2
# 在一般查詢時，同步補抓新聞索引
SEARCH_PARALLEL_NEWS=1


# ===================== Optional: FactChecker =====================
# 每次抽取要檢核的主張數量上限
FACTCHECK_CLAIMS=4
# 每個主張要找幾個來源（上限）
FACTCHECK_PER_CLAIM_SOURCES=6


# ===================== Optional: Caching & Fetch Limits =====================
# 搜尋/抓文快取時間（毫秒）
CACHE_TTL_MS=600000
# 單次搜尋最大結果數
SEARCH_MAX_RESULTS=10
# 各速度模式下抓取網頁數量
FETCH_PAGES_FAST=3
FETCH_PAGES_BAL=6
FETCH_PAGES_THO=8