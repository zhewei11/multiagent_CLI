OPENAI_API_KEY=''

TAVILY_API_KEY=''

PORT = 8787
NODE_ENV = development

# ===================== Optional: Core Models =====================
# 模型選擇 - 基於 OpenAI 官方文檔優化
# 參考: https://platform.openai.com/docs/models

# WRITER_MODEL: 寫作模型 - 需要創造性、連貫性和多語言支持
# gpt-4o: 最新旗艦模型，最佳性能，支持多模態，適合高質量內容創作
# gpt-4o-mini: 性價比高，性能接近 gpt-4o，適合生產環境
WRITER_MODEL=gpt-4o

# RESEARCH_MODEL: 研究模型 - 需要準確性、推理能力和信息提取
# gpt-4o: 最佳推理能力，適合複雜的信息分析和提取
# gpt-4o-mini: 性價比高，推理能力良好
RESEARCH_MODEL=gpt-4o

# CRITIC_MODEL: 批判性分析模型 - 需要深度分析、評估和判斷
# gpt-4o: 最佳分析能力，適合複雜的批判性思維任務
# gpt-4o-mini: 分析能力良好，性價比高
CRITIC_MODEL=gpt-4o

# ROUTER_MODEL: 路由規劃模型 - 需要邏輯推理和決策制定
# gpt-4o: 最佳邏輯推理能力，適合複雜的決策制定
# gpt-4o-mini: 邏輯推理能力良好
ROUTER_MODEL=gpt-4o

# EMBED_MODEL: 嵌入模型 - 用於語義搜索和相似性計算
# text-embedding-3-large: 最佳語義理解能力，支持多語言
# text-embedding-3-small: 性價比高，性能良好
EMBED_MODEL=text-embedding-3-large

# 回答語言：auto | en | zh-TW | ja | ko
TARGET_LANG=auto

# 速度模式：fast | balanced | thorough
SPEED_MODE=balanced

# 每輪最大時間上限（毫秒）。留空或 0 表示不限制
MAX_TIME_MS=20000

# 新聞搜尋最近天數（Router 判定為 news 時使用）
NEWS_DAYS=7

# 記憶儲存檔案
MEMORY_PATH=./memory.jsonl


# ===================== Optional: Style & Length =====================
# 模型參數優化 - 基於任務特點調整
WRITER_TEMPERATURE=0.7          # 寫作創造性，保持適中
WRITER_MAX_TOKENS=4000          # 增加token限制以支持更長的回答
RESEARCH_TEMPERATURE=0.1        # 研究準確性，降低溫度
ANALYST_TEMPERATURE=0.1         # 分析準確性，降低溫度
CRITIC_TEMPERATURE=0.2          # 批判性分析，適度降低溫度

# 新增：驗證深度和性能優化配置
# 驗證深度：fast(快速) | balanced(平衡) | thorough(徹底)
VALIDATION_DEPTH=balanced

# 緩存配置
VALIDATION_CACHE_TTL_MS=3600000     # 緩存生存時間：1小時 (毫秒)
VALIDATION_CACHE_MAX_SIZE=1000      # 最大緩存條目數

# 並行處理配置
VALIDATION_MAX_CONCURRENT=5         # 最大並發驗證數
VALIDATION_BATCH_SIZE=3             # 批處理大小


# ===================== Optional: Search Diversity =====================
# 多語查詢擴充（0=關閉, 1=開啟）
QUERY_EXPANSION=1
# 至少納入的英文來源數
MIN_EN_SOURCES=3
# 單一網域最多收錄幾筆
MAX_PER_DOMAIN=2
# 在一般查詢時，同步補抓新聞索引
SEARCH_PARALLEL_NEWS=1


# ===================== Optional: FactChecker =====================
# 每次抽取要檢核的主張數量上限
FACTCHECK_CLAIMS=4
# 每個主張要找幾個來源（上限）
FACTCHECK_PER_CLAIM_SOURCES=6


# ===================== Optional: Caching & Fetch Limits =====================
# 搜尋/抓文快取時間（毫秒）
CACHE_TTL_MS=600000
# 單次搜尋最大結果數
SEARCH_MAX_RESULTS=10
# 各速度模式下抓取網頁數量
FETCH_PAGES_FAST=3
FETCH_PAGES_BAL=6
FETCH_PAGES_THO=8